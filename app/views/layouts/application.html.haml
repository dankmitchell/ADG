- content_for :header_class, "with-proposition"

- content_for :head do
  = stylesheet_link_tag 'application', media: 'all'
  = csrf_meta_tags

- content_for :proposition_header do
  .header-proposition
    .content
      #nav.proposition-menu
        = link_to "ADG Interview Test", root_path, id: "proposition-name"
        %ul#proposition-links
          - if user_signed_in?
            %li
              = link_to 'Sign out', destroy_user_session_path, method: :delete
          - else
            %li
              = link_to 'Sign in', new_user_session_path
            %li
              = link_to 'Register', new_user_registration_path

= render file: 'layouts/govuk_template'
