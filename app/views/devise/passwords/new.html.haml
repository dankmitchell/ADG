- content_for :page_title, "Forgotten password - ADG Exercise"

%main{id: "content", role: "main"}
  .grid-row
    .column-full
      = devise_error_messages!
      %h1.heading-large Forgotten password
      = simple_form_for(resource, as: resource_name, url: password_path(resource_name), wrapper: :vertical_form, html: { method: :post }) do |f|
        = f.input :email
        = f.button :submit, "Submit", class: "button"
      = render "devise/shared/links"
