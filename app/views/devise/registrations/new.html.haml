- content_for :page_title, "Register - ADG Exercise"

%main{id: "content", role: "main"}
  .grid-row
    .column-full
      = devise_error_messages!
      %h1.heading-large Register
      = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), wrapper: :vertical_form )  do |f|
        = f.input :email
        = f.input :password
        = f.input :password_confirmation
        = f.button :submit, "Register", class: "button"
